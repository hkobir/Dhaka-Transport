<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/busIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_directions_bus_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/busNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:text="MM LOVELY"
        android:textColor="#000"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/routeNameTV"
        app:layout_constraintStart_toEndOf="@+id/busIV"
        app:layout_constraintTop_toTopOf="@id/busIV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/routeNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="r1(farmgate - abu)"
        android:textColor="#979494"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/busIV"
        app:layout_constraintStart_toEndOf="@+id/busIV"
        app:layout_constraintTop_toBottomOf="@id/busNameTV" />
    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorGrey"
        app:layout_constraintTop_toBottomOf="@+id/routeNameTV"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>